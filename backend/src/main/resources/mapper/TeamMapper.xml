<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.teamhistory.mapper.TeamMapper">

    <resultMap id="TeamResultMap" type="com.example.teamhistory.entity.Team">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="displayName" column="display_name"/>
        <result property="logoUrl" column="logo_url"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO teams (name, display_name, logo_url)
        VALUES (#{name}, #{displayName}, #{logoUrl})
    </insert>

    <select id="findByName" resultMap="TeamResultMap">
        SELECT * FROM teams WHERE name = #{name}
    </select>

    <select id="findById" resultMap="TeamResultMap">
        SELECT * FROM teams WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="TeamResultMap">
        SELECT * FROM teams
    </select>
    
    <select id="count" resultType="long">
        SELECT count(*) FROM teams
    </select>

</mapper>
